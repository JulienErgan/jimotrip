<!-- navbar -->

<nav class="jimotrip-navbar p-3">
  <div class="flexbox align-items-center">
    <div class="flexbox align-items-center">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" width="40" height="40" alt="">
        <%= link_to 'Jimotrip', root_path, class: "jimotrip-font-color jimo-logo-font ml-3" %>
    </div>
      <div class="flexbox nav-right">
        <%= link_to 'become a guide', new_guide_path(@user), class: "jimotrip-font-color nav-right header-link" %>
        <a class="p-3 navbar-brand jimotrip-font-color" href="#">see my bookings</a>
        <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
      </div>
    </div>
  </div>
</nav>


<!-- guide card -->

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-6">
      <div class="card-guide">
        <%= cl_image_tag @guide.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-guide-infos">
          <div>
            <h2><%= @current_user.name %></h2>
            <p><%= @guide.location %></p>
          </div>
          <div>
            <h2 class="card-guide-pricing"><%= @guide.price %> Yens</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
